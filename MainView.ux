<App Theme="Basic" ClearColor="#200c50">
	<iOS.StatusBarConfig Style="Light" />

	<DockPanel>
		<Text ux:Class="WhiteText" TextColor="#ffffff" />
		<TextInput ux:Class="WhiteTextInput" PlaceholderColor="#ffffff80" TextColor="#ffffff" CaretColor="#ffffff" />

		<!-- Button colors -->
		<float4 ux:Key="C600" ux:Value="#8869e5" />
		<float4 ux:Key="C700" ux:Value="#6447b3" />
		<float4 ux:Key="CFillFore" ux:Value="#644793" />

		<StatusBarBackground Dock="Top" />
		<BottomBarBackground Dock="Bottom" />

		<JavaScript>
			var Observable = require("FuseJS/Observable");

			var username = Observable("");
			var password = Observable("");

			var areCredentialsValid = Observable(function() {
				return username.value != "" && password.value != "";
			});

			module.exports = {
				username: username,
				password: password,

				areCredentialsValid: areCredentialsValid
			};
		</JavaScript>

		<Video Layer="Background" File="YOUR_VIDEO_HERE" IsLooping="true" AutoPlay="true" StretchMode="UniformToFill" ContentAlignment="Center" Opacity="0.3" Padding="-10">
			<Blur Radius="3.31" />
		</Video>

		<Grid Rows="1*,1*">
			<StackPanel Alignment="VerticalCenter">
				<WhiteText Alignment="HorizontalCenter" FontSize="50">awesomusic</WhiteText>
				<WhiteText Alignment="HorizontalCenter" Opacity=".5">music and puns and stuff</WhiteText>
			</StackPanel>
			<StackPanel Alignment="VerticalCenter" Margin="50,0,50,0">
				<WhiteTextInput PlaceholderText="username" Value="{username}" />
				<WhiteTextInput PlaceholderText="password" IsPassword="true" Value="{password}" />
				<Button Text="Log in" IsEnabled="{areCredentialsValid}" />
			</StackPanel>
		</Grid>
	</DockPanel>
</App>

